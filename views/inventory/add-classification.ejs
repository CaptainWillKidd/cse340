<section class="add-classification-main">
    <h1>Add New Classification</h1>

    <% if (messages && Array.isArray(messages) && messages.length > 0) { %>
        <div class="flash-message">
        <% messages.forEach(msg => { %><p><%= msg %></p><% }) %>
        </div>
    <% } %>

    <% if (errors && errors.length > 0) { %>
        <ul class="notice">
        <% errors.forEach(err => { %>
            <li><%= err.msg %></li>
        <% }) %>
        </ul>
    <% } %>

    <form action="/inv/add-classification" method="post" novalidate>
        <label for="classification_name">Classification name (no spaces or special chars)</label>
        <input
        id="classification_name"
        name="classification_name"
        type="text"
        required
        pattern="^[A-Za-z0-9]+$"
        value="<%= typeof classification_name !== 'undefined' ? classification_name : '' %>"
        title="Only letters and numbers, no spaces or special characters"
        >
        <button type="submit">Add Classification</button>
    </form>

    <p><a href="/inv">Back to management</a></p>
</section>